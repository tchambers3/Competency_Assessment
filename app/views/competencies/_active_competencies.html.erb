<h3>Active Competencies</h3>
<% if @active_competencies.empty? %>
  <p><em>There are no active competencies at this time.</em></p>
<% else %>
  <div class="row">
    <% @active_competencies.each do |c| %>
      <div class="col s12 m6">
        <div class="card blue-grey darken-1 small">
          <div class="card-content white-text">
            <span class="card-title"><%= link_to c.name, competency_path(c) %></span>
            <p><%= c.description %></p>
          </div>
          <div class="card-action">
            <%= link_to "Edit", edit_competency_path(c) %>
            <%= link_to "Delete", competency_path(c),
                  method: 'delete',
                  data: {confirm: "Are you sure you want to permanently delete #{c.name}?"} %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
