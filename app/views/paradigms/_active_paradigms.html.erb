<h3>Active Paradigms</h3>
<% if @active_paradigms.empty? %>
  <p><em>There are no active paradigms at this time.</em></p>
<% else %>
    <table border="1">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Ranking</th>
          <th>&nbsp;</th>
          <th>&nbsp;</th>
        </tr>
      </thead>
      <tbody>
        <% @active_paradigms.each do |p| %>
          <tr>
            <td><%= link_to p.name, paradigm_path(p) %></td>
            <td><%= p.description %></td>
            <td><%= p.ranking %></td>
            <td><%= link_to "Edit", edit_paradigm_path(p) %></td>
            <td>
              <%= link_to "Delete", paradigm_path(p),
                  method: 'delete',
                  data: {confirm: "Are you sure you want to permanently delete #{p.name}?"} %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
<% end %>
