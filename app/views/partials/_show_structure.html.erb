<% opt = "#{object.respond_to?(:name) ? object.name : model_name.capitalize}" %>
<h1><%= opt %> Details</h1>

</br>

<%= render "#{object_details}" %>

<%= link_to(eval("#{model_name.pluralize}_path")) do %>
  Display All <%= model_name.pluralize.capitalize %>
<% end %>
<br>
<%= link_to(eval("edit_#{model_name}_path(object)")) do %>
  <%= "Edit #{opt}" %>
<% end %>
<br>
<%= link_to(eval("#{model_name}_path(object)"), 
    method: 'delete', 
    data: {confirm: "Are you sure you want to permanently delete #{opt}?"}) do %>
  <%= "Delete #{opt}" %>
<% end %>